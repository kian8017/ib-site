---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Head from '../components/Head.astro';
import HandwrittenName from '../components/HandwrittenName.astro';

let title = "Home";
let description = "The IndexBrain helps you find names for genealogical research.";
---
<html lang="en">
<Head title={title} description={description} />
<body class="w-full h-screen flex flex-col">
	<Header />
	<main class="grow flex flex-col">
		<div>
			<div class="flex flex-col md:flex-row">
				<div class="bg-gray-200 md:basis-1/2 md:flex md:flex-col md:justify-center">
					<div class="m-4">
						<h1 class="my-4 text-4xl">Need help reading old handwriting?</h1>
						<h2 class="text-2xl font-normal">Decipher old handwriting with the help of a search engine specifically built to help find names for genealogy.</h2>
						<div class="my-8" />
						<a class="font-bold text-2xl p-2 no-underline bg-sky-400 hover:bg-sky-300 active:bg-sky-200 rounded-lg shadow-lg" href="https://search.indexbrain.org">Start searching now!</a>
					</div>
				</div>
				<div class="flex bg-gray-200 md:basis-1/2 md:justify-center">
					<div class="flex overflow-hidden md:w-96">
						<HandwrittenName file="handwritten-name-1.png" name="Christopher" />
						<HandwrittenName file="handwritten-name-2.jpg" name="Grimmung" />
					</div>
					<script>
						let autoplayInterval = 5; // seconds per slide
						let elements = document.querySelectorAll(".carousel-element");
						let currentSlide = 0;
						setInterval(() => {
							currentSlide = (currentSlide + 1) % elements.length;
							elements[currentSlide].scrollIntoView({behavior: "smooth"});
						}, autoplayInterval * 1000);
					</script>
				</div>
			</div>
			<div class="flex flex-col bg-green-100 p-4">
				<p>Engaging copy goes here.</p>
			</div>
		</div>
	</main>
	<Footer />
</body>
</html>