---
import '../styles/global.css';
import Header from './Header.astro';
import Footer from './Footer.astro';
import Head from './Head.astro';

interface Props {
	title: string;
	description: string;
}

let {title, description} = Astro.props as Props;

// FIXME: add meta tags (check kianmusser.com for inspiration)
---

<html lang="en">
<Head title={title} description={description} />
<body class="w-full h-screen flex flex-col">
	<Header />
	<main class="grow flex flex-col">
		<div class="self-center mx-4 py-4 md:max-w-2xl md:w-full">
			<slot />
		</div>
	</main>
	<Footer />
</body>
</html>
