---

interface Props {
    file: string;
    name: string;
}

const {file, name} = Astro.props as Props;
---

<div class="w-screen md:w-96 shrink-0 carousel-element flex">
    <div class="bg-white m-4 p-2 rounded-lg shadow-lg">
        <p class="text-2xl font-bold">Turn this:</p>
        <img class="" src={`/img/${file}`} alt="handwritten name" />
        <p class="text-2xl font-bold">Into this:</p>
        <p class="text-2xl">{name}</p>
    </div>
</div>